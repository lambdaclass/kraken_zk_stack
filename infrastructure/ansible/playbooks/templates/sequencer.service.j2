[Unit]
Description={{ inventory_hostname }}

[Service]
User=sequencer
WorkingDirectory=/home/sequencer/
Restart=on-failure
ExecStart=/home/sequencer/starknet_stack/sequencer/target/release/node -vv run --keys /home/sequencer/config/{{ inventory_hostname }}.json --committee /home/sequencer/config/committee.json --store /home/sequencer/db-{{ inventory_hostname }} --parameters /home/sequencer/config/parameters.json
ExecReload=/bin/kill -HUP
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
